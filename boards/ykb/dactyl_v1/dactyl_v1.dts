/dts-v1/;
#include <st/wb/stm32wb55Xg.dtsi>
#include <st/wb/stm32wb55rgvx-pinctrl.dtsi>
#include <zephyr/dt-bindings/input/input-event-codes.h>

/ {
	model = "YarmanKeyboards Dactyl V1 board";
	compatible = "ykb,dactyl_v1";

	chosen {
		zephyr,console = &lpuart1;
		zephyr,shell-uart = &lpuart1;
		zephyr,bt-mon-uart = &lpuart1;
		zephyr,bt-c2h-uart = &lpuart1;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
	};

    mux1: mux1 {
        compatible = "mux-gpio";
        sel-gpios = <&gpiob 7 GPIO_ACTIVE_HIGH>,
                    <&gpiob 6 GPIO_ACTIVE_HIGH>,
                    <&gpiob 5 GPIO_ACTIVE_HIGH>,
                    <&gpiob 4 GPIO_ACTIVE_HIGH>;
        channels = <11>;
        #mux-cells = <0>;
    };

    mux2: mux2 {
        compatible = "mux-gpio";
        sel-gpios = <&gpiod 0 GPIO_ACTIVE_HIGH>,
                    <&gpioc 12 GPIO_ACTIVE_HIGH>,
                    <&gpioc 11 GPIO_ACTIVE_HIGH>,
                    <&gpioc 10 GPIO_ACTIVE_HIGH>;
        channels = <15>;
        #mux-cells = <0>;
    };

    mux3: mux3 {
        compatible = "mux-gpio";
        sel-gpios = <&gpiob 15 GPIO_ACTIVE_HIGH>,
                    <&gpiob 14 GPIO_ACTIVE_HIGH>,
                    <&gpiob 13 GPIO_ACTIVE_HIGH>,
                    <&gpiob 12 GPIO_ACTIVE_HIGH>;
        channels = <9>;
        #mux-cells = <0>;
    };

    kscan: kscan {
        compatible = "kscan-muxes";

        muxes = <&mux1>, <&mux2>, <&mux3>;
        mux-names = "mux1", "mux2", "mux3";

        io-channels = <&adc1 1>, <&adc1 2>, <&adc1 3>;
        io-channel-names = "cmn1", "cmn2", "cmn3";
    };

	leds: leds {
		compatible = "gpio-leds";

		led_error_status: led_error_status {
			gpios = <&gpioc 4 GPIO_ACTIVE_HIGH>;
			label = "Error Status LED";
		};

		led_serial_activity: led_serial_activity {
			gpios = <&gpioc 5 GPIO_ACTIVE_HIGH>;
			label = "Serial Activity LED";
		};

		led_capslock_status: led_capslock_status {
			gpios = <&gpioc 6 GPIO_ACTIVE_HIGH>;
			label = "Capslock Status LED";
		};
	};

	hid_dev_0: hid_dev_0 {
		compatible = "zephyr,hid-device";
		label = "HID0";
		protocol-code = "keyboard";
		in-report-size = <64>;
		in-polling-period-us = <1000>;
	};

	gpio_keys {
		compatible = "gpio-keys";

		button_boot0: button_boot0 {
			label = "SW1";
			gpios = <&gpioh 3 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
		};
	};

	aliases {
		watchdog0 = &iwdg;
		die-temp0 = &die_temp;
		volt-sensor0 = &vref;
		volt-sensor1 = &vbat;
		mcuboot-led0 = &led_error_status;
		mcuboot-button0 = &button_boot0;
	};

    eeprom: eeprom {
        compatible = "zephyr,emu-eeprom";
        size = <DT_SIZE_K(3)>;
        pagesize = <DT_SIZE_K(4)>;
        partition = <&storage_partition>;
        rambuf;
        partition-erase;
    };
};

&die_temp {
	status = "okay";
};

&clk_lsi1 {
	status = "okay";
};

&clk_hse {
	status = "okay";
};

&clk_lse {
	status = "okay";
};

&clk_hsi48 {
	status = "okay";
};

&clk48 {
	/* Node is disabled by default as default source is HSI48 */
	/* To select another clock, enable the node */
	clocks = <&rcc STM32_SRC_HSI48 CLK48_SEL(0)>;
};

&ble_rf {
    status = "okay";
};

&rcc {
	clocks = <&clk_hse>;
	clock-frequency = <DT_FREQ_M(32)>;
	cpu1-prescaler = <1>;
	cpu2-prescaler = <1>;
	ahb4-prescaler = <1>;
	apb1-prescaler = <1>;
	apb2-prescaler = <1>;
};

